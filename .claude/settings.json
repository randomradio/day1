{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "WebSearch",
      "Bash(.venv/bin/python:*)",
      "mcp__day1__*",
      "Bash(lsof:*)",
      "Bash(curl:*)"
    ]
  },
  "mcpServers": {
    "day1": {
      "command": "/Users/randomradio/src/day1/.venv/bin/python",
      "args": [
        "-m",
        "day1.mcp.mcp_server"
      ],
      "cwd": "/Users/randomradio/src/day1",
      "env": {
        "PYTHONPATH": "/Users/randomradio/src/day1/src"
      }
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/randomradio/src/day1/.venv/bin/python -m day1.hooks.session_start",
            "env": {
              "PYTHONPATH": "/Users/randomradio/src/day1/src",
              "CLAUDE_PROJECT_PATH": "/Users/randomradio/src/day1"
            }
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/randomradio/src/day1/.venv/bin/python -m day1.hooks.user_prompt",
            "env": {
              "PYTHONPATH": "/Users/randomradio/src/day1/src",
              "CLAUDE_PROJECT_PATH": "/Users/randomradio/src/day1"
            }
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/randomradio/src/day1/.venv/bin/python -m day1.hooks.pre_tool_use",
            "env": {
              "PYTHONPATH": "/Users/randomradio/src/day1/src",
              "CLAUDE_PROJECT_PATH": "/Users/randomradio/src/day1"
            }
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/randomradio/src/day1/.venv/bin/python -m day1.hooks.post_tool_use",
            "env": {
              "PYTHONPATH": "/Users/randomradio/src/day1/src",
              "CLAUDE_PROJECT_PATH": "/Users/randomradio/src/day1"
            }
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/randomradio/src/day1/.venv/bin/python -m day1.hooks.assistant_response",
            "env": {
              "PYTHONPATH": "/Users/randomradio/src/day1/src",
              "CLAUDE_PROJECT_PATH": "/Users/randomradio/src/day1"
