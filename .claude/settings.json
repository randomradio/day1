    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/randomradio/src/day1/.venv/bin/python -m day1.hooks.pre_compact",
            "env": {
              "PYTHONPATH": "/Users/randomradio/src/day1/src",
              "CLAUDE_PROJECT_PATH": "/Users/randomradio/src/day1"
            }
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/randomradio/src/day1/.venv/bin/python -m day1.hooks.session_end",
            "env": {
              "PYTHONPATH": "/Users/randomradio/src/day1/src",
              "CLAUDE_PROJECT_PATH": "/Users/randomradio/src/day1"
            }
          }
        ]
      }
    ]
  }
}