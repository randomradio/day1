# BranchedMind environment variables
# Copy this file to .env and fill in your values.

# MatrixOne connection string (required)
BM_DATABASE_URL=mysql+aiomysql://user:pass@localhost:6001/branchedmind

# OpenAI API key for embeddings (required for non-mock mode)
BM_OPENAI_API_KEY=

# Anthropic API key for LLM features
BM_ANTHROPIC_API_KEY=

# Embedding provider: "openai" or "mock"
# BM_EMBEDDING_PROVIDER=openai
