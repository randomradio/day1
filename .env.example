# Day1 â€” Git-like memory layer for AI agents
# Copy this file to .env and fill in your values.
#
# Docker Compose? The DB URL is overridden automatically.
# Local dev?     Use localhost:6001 after running MatrixOne.

# MatrixOne connection string (required)
BM_DATABASE_URL=mysql+aiomysql://root:day1@localhost:6001/day1

# Embedding provider: "openai", "doubao", or "mock"
BM_EMBEDDING_PROVIDER=doubao

# OpenAI API key for embeddings (if using openai provider)
BM_OPENAI_API_KEY=
BM_OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Doubao (Volces/ByteDance) Embedding API
BM_DOUBAO_API_KEY=your-doubao-api-key
BM_DOUBAO_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
BM_DOUBAO_EMBEDDING_MODEL=doubao-embedding-vision-251215
BM_DOUBAO_LLM_MODEL=doubao-seed-1-6-251015

# LLM Configuration (OpenAI-compatible API)
BM_LLM_PROVIDER=custom
BM_LLM_API_KEY=your-llm-api-key
BM_LLM_BASE_URL=https://your-llm-endpoint.com/v1
BM_LLM_MODEL=your-model-name

# Legacy Anthropic (for backward compatibility)
BM_ANTHROPIC_API_KEY=

# Logging
BM_LOG_LEVEL=DEBUG
BM_LOG_FORMAT=text
